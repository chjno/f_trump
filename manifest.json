{
  "name": "F Trump",
  "manifest_version": 2,
  "version": "0.7",
  "description": "Say \"F Trump\" by replacing your mouse cursor with a middle finger whenever you mouse over any mention of trump.",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": ["jquery.js", "content.js"]
  }],
  "web_accessible_resources": ["images/finger.png"]
}
